<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="CrossBrowser" verbose="1" >
    <test name="Chrome" >
        <parameter name = "browser" value="chrome"></parameter>
        <classes>
            <class name="CrossBrowser" />
        </classes>
    </test>
    <test name="Firefox" >
        <parameter name = "browser" value="firefox"></parameter>
        <classes>
            <class name="CrossBrowser"></class>
        </classes>
    </test>

</suite>
